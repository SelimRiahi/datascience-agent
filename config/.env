# Configuration Base de Données
# Pour commencer avec SQLite (simple)
DATABASE_URL=sqlite:///./autonomous_ds.db

# Si tu veux PostgreSQL plus tard :
# DATABASE_URL=postgresql://username:password@localhost:5432/autonomous_ds

# Configuration Power BI API
# Tu dois créer une App Azure AD pour obtenir ces valeurs
POWERBI_CLIENT_ID=your_client_id_here
POWERBI_CLIENT_SECRET=your_client_secret_here  
POWERBI_TENANT_ID=your_tenant_id_here
POWERBI_USERNAME=your_powerbi_email@company.com
POWERBI_PASSWORD=your_powerbi_password

# Configuration Debug
DEBUG=True